@model List<HW_20.Domain.Entites.Car.CarModel>

<!DOCTYPE html>
<html lang="fa">
<head>
    <meta charset="UTF-8">
    <title>لیست مدل </title>
    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: sans-serif;
            background: linear-gradient(to right, #b92b27, #1565c0);
            color: white;
        }

        .container {
            padding: 20px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }

        th, td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: center;
        }

        th {
            background-color: #3498db;
            color: white;
        }

        .btn {
            padding: 5px 10px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s;
            margin: 2px;
        }

        .btn-update {
            background-color: #f0ad4e;
        }

        .btn-delete {
            background-color: #d9534f;
        }

        .btn-details {
            background-color: #5bc0de;
        }

        .btn-create {
            background-color: #d9534f;
        }

        .btn-update:hover {
            background-color: #ec971f;
        }

        .btn-delete:hover {
            background-color: #c9302c;
        }

        .btn-details:hover {
            background-color: #31b0d5;
        }

        .btn-create:hover {
            background-color: #31b0d5;
        }
    </style>
</head>
<body>
    <div class="container">
        <h2>لیست مدل</h2>

        <table>
            <thead>
                <tr>
                    <th>شناسه</th>
                    <th>نام مدل </th>
                    <th>عملیات</th>
               
                </tr>
            </thead>
            <tbody>

                @if (Model != null && Model.Any())
                {
                    foreach (var car in Model)
                    {
                        <tr>
                            <td>@car.Id</td>
                            <td>@car.Name</td>
                            <td>
                                <form asp-controller="Home" asp-action="EditCarModel" method="post" style="display:inline;">
                                    <input type="hidden" name="id" value="@car.Id" />
                                    <button type="submit" class="btn btn-delete">ویرایش</button>
                                </form>
                                <form asp-controller="Home" asp-action="DeleteCarModel" method="post" style="display:inline;">
                                    <input type="hidden" name="id" value="@car.Id" />
                                    <button type="submit" class="btn btn-delete">حذف</button>
                                </form>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="7">هیچ مدلی جهت نمایش وجود ندارد.</td>
                    </tr>
                }
                <form asp-controller="Home" asp-action="AddCarModel" method="post">
                    <button type="submit" class="btn btn-create">اضافه کردن مدل جدید</button>
                </form>
            </tbody>
        </table>
    </div>
</body>
</html>